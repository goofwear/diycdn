#!/bin/bash

set -e
set -o pipefail

cd /etc/nginx

curl -k -H 'Authorization: Bearer <%= @current_proxy.api_key %>' https://cdn.kodos.zrail.net/certificates > certificates.zip
unzip -o certificates.zip

curl -k -H 'Authorization: Bearer <%= @current_proxy.api_key %>' https://cdn.kodos.zrail.net/configurations > sites-available/proxies.conf

systemctl restart nginx
